<div class="row">
    <div class="col-lg-12">
        <table class="table">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Idade</th>
                    <th>Estado</th>
                    <th>Cargo</th>
                    <th colspan="3"></th>
                </tr>
            </thead>
            <tbody>
                <% if @contatos.present? %>
                    <% @contatos.each do |contato| %>
                        <tr>
                            <td><%= contato.nome %></td>
                            <td><%= contato.email %></td>
                            <td><%= contato.idade %></td>
                            <td><%= contato.estado.sigla %></td>
                            <td><%= contato.cargo %></td>
                            <td><%= link_to 'Detalhes', contato %></td>
                            <td><%= link_to 'Editar', edit_contato_path(contato) %></td>
                            <td><%= link_to 'Excluir', contato, method: :delete,
                                    data: { confirm: 'Tem certeza que deseja exluir este Contato?' } %></td>
                        </tr>
                    <% end %>
                <% else %>
                    <tr>
                        <td>Nenhum resultado encontrado.</td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
